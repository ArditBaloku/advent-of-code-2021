{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "baseUrl": "src",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/scripts/**/*"]
}
